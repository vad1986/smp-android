<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditAlertActivity">
    <include layout="@layout/toolbar" />

    <TextView
        android:paddingLeft="170sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:text="Alert Name">

    </TextView>

    <EditText
        android:drawableRight="@drawable/ic_edit_pen"

        android:id="@+id/editNameAlert_EditText"
        android:layout_marginLeft="100sp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName" />

    <TextView
        android:layout_marginTop="20sp"
        android:paddingLeft="160sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:text="Alert Description">

    </TextView>

    <EditText
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/editDescriptionAlert_EditText"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="5dp"
        android:inputType="textPersonName"
        android:background="@drawable/border_style"
        android:drawableRight="@drawable/ic_edit_pen"

        />

    <Switch
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="160sp"
        android:id="@+id/deleteAlert_Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDescriptionAlert_EditText"
        android:layout_centerInParent="true"
        android:text="ON/OFF"
        android:textOff="OFF"
        android:textOn="ON"
        />

    <TextView
        android:layout_marginTop="10sp"
        android:paddingLeft="160sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:text="Choose Alert">

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <ListView

        android:textAlignment="center"
        android:id="@+id/editAlert_ListView"
        android:layout_width="match_parent"
        android:layout_height="200sp"
       />



    <Button
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/sendEditAlert_Button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="17sp"
        android:background="@drawable/button_main"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Save"
        android:layout_marginLeft="55sp"
        android:textColor="@color/white"
        android:textSize="30sp" />

</LinearLayout>