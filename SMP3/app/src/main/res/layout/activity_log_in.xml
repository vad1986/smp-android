<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/login"
    android:background="@color/colorPrimaryDarkest"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.LogInActivity">

    <RelativeLayout
        android:animateLayoutChanges="true"
        android:id="@+id/rellay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo_corrected" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="80sp"
        android:id="@+id/rellay2"
        android:visibility="gone"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170sp">



    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >


        <TextView

            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:fontFamily="@font/aclonica"
            android:text="Login"

            android:textColor="@color/whiteDark"


            android:textSize="50dp" />

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_below="@+id/login_text"
            android:layout_marginTop="20dp"
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <EditText
                android:layout_marginTop="40sp"

                android:id="@+id/userName_editText"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/et_bg"
                android:hint="Username"
                android:gravity="center"
                android:text="vadavid"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="false"
                />

            <!-- android:text="vadavid"-->



            <EditText
                android:layout_marginTop="20sp"
                android:id="@+id/password_editText"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/et_bg"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:gravity="center"
                android:hint="Password"
                android:paddingRight="15dp"

                android:text="vadavid86" />
            <!-- android:text="vadavid86"-->


            <TextView

                android:id="@+id/errorResponseView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
                android:textColor="@color/red"
                android:textSize="20dp" />

            <Button
                android:id="@+id/logIn_button"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:background="@drawable/button_login"
                android:text="Log In "
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                />

            <TextView
                android:textColor="@color/whiteDark"
                android:id="@+id/forgotPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logIn_button"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="55sp"
                android:text="Forgot your password?"
                android:textSize="15dp" />


        </LinearLayout>



    </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

