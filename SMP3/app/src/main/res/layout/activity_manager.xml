<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weird"
    tools:context=".activities.ManagerActivity">

    <include layout="@layout/toolbar" />


    <TableLayout
        android:id="@+id/tableButton_Manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_centerInParent="true">

    <TableRow
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="REPORTS"
            android:id="@+id/taskReport_button"
            android:drawableTop="@drawable/ic_reports"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"

            android:background="@drawable/buttonshape"

            android:padding="20dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#4655b6"
            android:textSize="18sp" />

        <Button
            android:id="@+id/editClock_Btn"
            android:drawableTop="@drawable/ic_edit_clock"
            android:text="Edit clock"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="20dp"

            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#4655b6"
            android:textSize="18sp" />

    </TableRow>
    </TableLayout>

</RelativeLayout>